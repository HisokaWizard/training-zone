{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*":["./src/app/components/*"],
      "@game/*":["./src/app/components/colonialists/*"],
      "@gameModels/*":["./src/app/components/colonialists/models/*"],
      "@gameStore/*":["./src/app/components/colonialists/store/*"],
    }
  },
  "include": [
    "./src/**/**/*"
  ]
}